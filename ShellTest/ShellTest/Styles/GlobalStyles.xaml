<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ShellTest.Styles.GlobalStyles" xmlns:styles="clr-namespace:ShellTest.Styles">
    <ResourceDictionary.MergedDictionaries>
        <styles:FontStyles />
        <styles:Sizes />
        <styles:Styles />
    </ResourceDictionary.MergedDictionaries>
    <Style BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button" />
    <Style TargetType="Entry">
        <Setter Property="FontFamily" Value="{StaticResource BrandonGrotesqueMedium}" />
        <Setter Property="FontSize" Value="Medium" />
        <Setter Property="Margin">
            <Thickness Top="{StaticResource 0.5xDefaultMargin}" />
        </Setter>
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
    </Style>
    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="false" />
        <Setter Property="Padding" Value="0" />
    </Style>
    <Style TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="0" />
        <Setter Property="RowSpacing" Value="0" />
    </Style>
    <Style BasedOn="{StaticResource BrandonGrotesqueMediumMediumFontStyle}" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
    </Style>
    <Style TargetType="StackLayout">
        <Setter Property="Spacing" Value="0" />
    </Style>
</ResourceDictionary>